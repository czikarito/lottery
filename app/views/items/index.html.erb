<p id="notice"><%= notice %></p>
<%= render 'search' %>
<h1>Items</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% items.each do |item| %>
      <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= image_tag item.image.url(:medium) %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= item.edit_link %></td>
          <td><%= item.delete_link %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= paginate items %>
<%= item.new_item_link %>
